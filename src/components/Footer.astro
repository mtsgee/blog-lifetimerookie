<style>
	footer {
		padding: 2rem 1rem 4rem 1rem;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}

	.tagline {
		font-style: italic;
		margin-bottom: 0.5rem;
	}

	.copyright {
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.copyright a {
		color: rgb(var(--gray-dark));
	}

	.copyright a:hover {
		color: var(--accent);
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
	}

	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
		transition: color 0.2s ease;
	}

	.social-links a:hover {
		color: var(--accent);
	}

	.social-links a:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
		border-radius: 4px;
	}
</style>
