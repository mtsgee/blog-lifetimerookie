---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/" class="site-title">Lifetime Rookie</a>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<span class="separator">|</span>
			<HeaderLink href="/long-form">Long Form</HeaderLink>
			<span class="separator">|</span>
			<HeaderLink href="/random-thoughts">Random Thoughts</HeaderLink>
			<span class="separator">|</span>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		border-bottom: 1px solid rgb(var(--gray-light));
		background: #fff;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 720px;
		margin: 0 auto;
		padding: 1rem 1em;
	}

	.site-title {
		font-weight: 700;
		font-size: 1.1rem;
		text-decoration: none;
		color: rgb(var(--black));
	}

	.site-title:hover {
		color: var(--accent);
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-size: 0.95rem;
	}

	.separator {
		color: rgb(var(--gray-light));
		user-select: none;
	}

	@media (max-width: 600px) {
		nav {
			flex-direction: column;
			gap: 0.75rem;
			text-align: center;
		}

		.nav-links {
			gap: 0.5rem;
			flex-wrap: wrap;
			justify-content: center;
		}
	}
</style>
