---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Hero Section */
			.hero {
				text-align: center;
				padding: 3rem 1rem;
				margin-bottom: 2rem;
			}

			.hero h1 {
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
				text-wrap: balance;
			}

			.hero-tagline {
				color: rgb(var(--gray));
				font-size: 1.125rem;
				margin-bottom: 1.5rem;
			}

			.hero-intro {
				max-width: 600px;
				margin: 0 auto 2rem auto;
				line-height: 1.7;
			}

			.hero-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.btn {
				display: inline-block;
				padding: 0.75rem 1.5rem;
				border-radius: 0.5rem;
				text-decoration: none;
				font-weight: 600;
				transition: background-color 0.2s ease, transform 0.2s ease;
			}

			.btn:focus-visible {
				outline: 2px solid var(--accent);
				outline-offset: 2px;
			}

			.btn-primary {
				background: var(--accent);
				color: #fff;
			}

			.btn-primary:hover {
				background: var(--accent-dark);
				color: #fff;
			}

			.btn-secondary {
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
			}

			.btn-secondary:hover {
				background: rgb(var(--gray));
				color: #fff;
			}

			/* Section Styling */
			section {
				margin-bottom: 3rem;
			}

			section h2 {
				font-size: 1.5rem;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid rgb(var(--gray-light));
			}

			/* Posts List */
			.posts-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.posts-list li {
				margin-bottom: 0.75rem;
			}

			.posts-list a {
				display: flex;
				flex-wrap: wrap;
				justify-content: space-between;
				align-items: baseline;
				gap: 0.5rem;
				text-decoration: none;
				padding: 0.5rem 0;
				border-radius: 0.25rem;
				transition: color 0.2s ease;
			}

			.posts-list a:hover {
				color: var(--accent);
			}

			.posts-list a:focus-visible {
				outline: 2px solid var(--accent);
				outline-offset: 4px;
			}

			.post-title {
				color: rgb(var(--black));
				font-weight: 500;
			}

			.posts-list a:hover .post-title {
				color: var(--accent);
			}

			.post-date {
				color: rgb(var(--gray));
				font-size: 0.9rem;
				white-space: nowrap;
			}

			.view-all {
				display: inline-block;
				margin-top: 1rem;
				font-size: 0.95rem;
			}

			/* Social Links Section */
			.social-list {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem 1.5rem;
			}

			.social-list a {
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.social-list a:hover {
				color: var(--accent);
			}

			.social-list a:focus-visible {
				outline: 2px solid var(--accent);
				outline-offset: 2px;
				border-radius: 2px;
			}

			@media (prefers-reduced-motion: reduce) {
				.btn {
					transition: none;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero" aria-labelledby="hero-title">
				<h1 id="hero-title">Lifetime Rookie</h1>
				<p class="hero-tagline">Always learning, never an expert</p>
				<p class="hero-intro">
					Welcome to my corner of the Internet. I share thoughts on <strong>life</strong>, 
					<strong>soccer</strong>, <strong>wealth</strong>, and <strong>money</strong> in 
					long and short form. Always a student, forever curious.
				</p>
				<div class="hero-buttons">
					<a href="/long-form" class="btn btn-primary">Long Form</a>
					<a href="/dailies" class="btn btn-secondary">Dailies</a>
				</div>
			</section>

			<section aria-labelledby="recent-posts">
				<h2 id="recent-posts">Recent Posts</h2>
				{posts.length > 0 ? (
					<ul class="posts-list">
						{posts.slice(0, 5).map((post) => (
							<li>
								<a href={`/long-form/${post.id}/`}>
									<span class="post-title">{post.data.title}</span>
									<span class="post-date"><FormattedDate date={post.data.pubDate} /></span>
								</a>
							</li>
						))}
					</ul>
				) : (
					<p>No posts yet. Check back soon!</p>
				)}
				<a href="/long-form" class="view-all">View all posts &rarr;</a>
			</section>

			<section aria-labelledby="find-me">
				<h2 id="find-me">Find Me Around the Web</h2>
				<ul class="social-list">
					<li><a href="https://twitter.com/playingcatch">Twitter/X</a></li>
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
