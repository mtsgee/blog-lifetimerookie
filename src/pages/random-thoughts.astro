---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Random Thoughts | ${SITE_TITLE}`} description="Random thoughts and quick takes from @playingcatch on Twitter/X." />
		<style>
			.page-header {
				margin-bottom: 2rem;
				text-align: center;
			}

			.page-header h1 {
				margin-bottom: 0.5rem;
			}

			.page-header p {
				color: rgb(var(--gray));
				margin: 0;
			}

			.twitter-container {
				display: flex;
				justify-content: center;
				margin: 2rem 0;
			}

			.twitter-timeline-wrapper {
				width: 100%;
				max-width: 550px;
				min-height: 600px;
			}

			.follow-link {
				text-align: center;
				margin-top: 1.5rem;
			}

			.follow-link a {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.75rem 1.5rem;
				background: #1da1f2;
				color: white;
				text-decoration: none;
				border-radius: 2rem;
				font-weight: 600;
				transition: background-color 0.2s ease;
			}

			.follow-link a:hover {
				background: #1a91da;
				color: white;
			}

			.follow-link a:focus-visible {
				outline: 2px solid var(--accent);
				outline-offset: 2px;
			}

			.follow-link svg {
				width: 20px;
				height: 20px;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-header">
				<h1>Random Thoughts</h1>
				<p>Quick takes and random thoughts from my Twitter feed</p>
			</div>

			<div class="twitter-container">
				<div class="twitter-timeline-wrapper">
					<a 
						class="twitter-timeline" 
						data-height="800"
						data-theme="light"
						data-chrome="noheader nofooter noborders"
						href="https://twitter.com/playingcatch?ref_src=twsrc%5Etfw"
					>
						Tweets by @playingcatch
					</a>
				</div>
			</div>

			<div class="follow-link">
				<a href="https://twitter.com/playingcatch" target="_blank" rel="noopener noreferrer">
					<svg viewBox="0 0 16 16" aria-hidden="true">
						<path
							fill="currentColor"
							d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
						></path>
					</svg>
					Follow @playingcatch
				</a>
			</div>
		</main>
		<Footer />

		<!-- Twitter Widget Script -->
		<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
	</body>
</html>
